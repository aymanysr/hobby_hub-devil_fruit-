<%# app/views/pages/home.html.erb %>
<%= form_with url: devil_fruits_path, method: :get, class: "d-flex" do |form| %>

  <div class="form-group">
    <%= form.text_field :query, class: "form-control", placeholder: "Find a devil fruit" %>
  </div>
  <div class="form-group">
    <%= form.submit "Search", class: "btn" %>
  </div>
<% end %>
<section class="mt-5">
  <div class="container text-center">
    <h1>Welcome to our Devil Fruit Shop! 🍇</h1>
    <h4><%= link_to 'Show me the Devil Fruits', devil_fruits_path(@devil_fruit) %></h4>
  </div>
</section>

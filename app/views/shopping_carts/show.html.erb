        <% if @cart_items.count > 0 %>
          <% @cart_items.each do |cart_item| %>
          <ul>
            <li>"<%= link_to cart_item.devil_fruit.name, cart_item_path(cart_item) %>" - <%= cart_item.devil_fruit.price %> $</li>

<div class="layout-view--padding">
    <h3> Welcome to your shopping cart ðŸ˜Š </h3>

    <h4>Items in your Cart:</h4>
        <% if @cart_items.count > 0 %>
          <% @cart_items.each do |cart_item|   %>
              <%= cart_item.devil_fruit.name  %>
            <% end %>
        <% else %>
          <p>No items in your cart yet</p>
      <% end %>
    <p>
      <select name="action" id="action" class="input--fullwidth">
        <option disabled selected>Select an action...</option>
        <optgroup label="Cart">
          <option value="cart-prop">See my items</option>
          <option value="add-cart-prop">Add an item</option>
          <option value="rem-cart-prop">Remove an item</option>
        </optgroup>
      </select>
    </p>

  <p class="footer layout-footer">
    <a id="submit" class="btn btn-primary btn-large">Apply</a>
    <a class="btn btn-delete btn-large" onclick="clearCart()">Empty cart</a>
  </p>

</div>

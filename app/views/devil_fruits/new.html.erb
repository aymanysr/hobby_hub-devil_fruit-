<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mt-5">
        <div class="card-header">
          <h3 class="text-center my-3">Add Your Devil Fruit 🫐</h3>
        </div>
        <div class="card-body">
          <%= simple_form_for(@devil_fruit) do |f| %>
            <div class="form-group">
              <%= f.label :name, class: "font-weight-bold" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :price, class: "font-weight-bold mt-3" %>
              <%= f.text_field :price, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :description, class: "font-weight-bold mt-3" %>
              <%= f.text_area :description, class: "form-control" %>
            </div>
             <div class="mb-3">
              <label for="formFileDisabled" class="form-label mt-3">Image</label>
              <input class="form-control" type="file" id="formFile">
              </div>
            <%= f.submit "Add Devil Fruit", class: "btn btn-info mt-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%# app/views/devil_fruits/index.html.erb %>

<h2>Choose your Devil Fruit!</h2>

<%# ************** Display Devil Fruit Cards ****** %>
  <div class="container">
    <div class="row justify-content-center">
      <% @devil_fruits.each do |devil_fruit| %>
        <div class ="col-8 col-sm-6 col-md-4">
          <div class="card bg-light mb-3 mt-3">
          <img class="card-img-top" src="https://mymodernmet.com/wp/wp-content/uploads/2022/10/devil-fruit-carve-2.jpg" alt="Dragon Fruit image">
            <div class="card-body">
              <h5 class="card-text mb-1 text-xs font-gamma"> <%= devil_fruit.name %></h5>
              <h5 class="card-text mb-1 text-xs font-gamma"><%= devil_fruit.price %> $</h5>
              <p class="card-text card-link mb-1 text-xs"> <%= link_to 'Show Devil Fruit 🍓', devil_fruit_path(devil_fruit)%></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

<%# ************** Create Devil Fruit ****** %>
<p class="card-text card-link mb-1 text-xs"> <%= link_to 'Upload a new Devil Fruit 🍌', new_devil_fruit_path(@devil_fruit)%></p>
